# Integration test defaults (loaded by pytest-dotenv via pytest.ini env_files)
# Copy this file to .env.test and customize for your environment
# Aligned with infra/pvm/.env.example

# Port Configuration
PORT_MAIN=8888
PORT_UI=3000

# Database Configuration (localhost for tests vs docker for infra)
PORT_POSTGRES_UI=8889
PORT_POSTGRES_HOST=5444
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev
POSTGRES_DB=product_video_matching
POSTGRES_HOST=localhost
POSTGRES_DSN=postgresql://postgres:dev@localhost:5444/product_video_matching?sslmode=disable
TZ=Asia/Ho_Chi_Minh

# Redis
PORT_REDIS=6380
PORT_REDIS_UI=8891

# Message Broker Configuration (localhost for tests vs docker for infra)
BUS_BROKER=amqp://guest:guest@localhost:5672/

# Data Storage
DATA_ROOT=./data
VIDEO_DIR=./videos
MODEL_CACHE=./model_cache

# Vision Models
EMBED_MODEL=clip-vit-b32
IMG_SIZE=(512,512)

# Logging
LOG_LEVEL=INFO

# Test Service Mode Configuration (enforce real services for integration tests)
VIDEO_CRAWLER_MODE=live
DROPSHIP_PRODUCT_FINDER_MODE=live
INTEGRATION_TESTS_ENFORCE_REAL_SERVICES=true

# Test Configuration Timeouts (in seconds)
PVM_OBS_WAIT_SECS=300
PVM_MAX_VIDEOS_FOR_IT=5
INTEGRATION_TEST_TIMEOUT=1200
MAX_RETRY_ATTEMPTS=3
SERVICE_HEALTH_CHECK_TIMEOUT=30

# API Keys (add real keys for integration tests)
# AMAZON_ACCESS_KEY_ID=
# AMAZON_SECRET_ACCESS_KEY=
# EBAY_APP_ID=
# YOUTUBE_API_KEY=