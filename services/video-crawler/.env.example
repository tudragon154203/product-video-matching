# Root directory where downloaded videos are stored
VIDEO_DIR=./videos

# Number of videos to search for per (platform, query)
NUM_VIDEOS=10

# Number of concurrent video downloads
NUM_PARALLEL_DOWNLOADS=5

# Logging
LOG_LEVEL=INFO

# =============================================================================
# TikTok API Configuration
# =============================================================================

# TikTok API Token (obtain from your browser cookies on tiktok.com)
# This is optional but recommended for better API access
# To get: Open tiktok.com → Developer Tools → Application → Cookies → Copy 'ms_token'
TIKTOK_MS_TOKEN=

# Proxy URL for accessing TikTok (NOT NEEDED if your IP is in Vietnam)
# Format: http://username:password@proxy_host:proxy_port
# Leave empty if your IP is already in Vietnam
TIKTOK_PROXY_URL=

# Browser to use for TikTok API (chromium, firefox, webkit)
TIKTOK_BROWSER=chromium

# Run browser in headless mode (true/false)
TIKTOK_HEADLESS=true

# Maximum number of retry attempts for failed requests
TIKTOK_MAX_RETRIES=3

# Sleep time in seconds after creating sessions (optimized for Vietnam IP)
TIKTOK_SLEEP_AFTER=2

# Number of TikTok API sessions to create
TIKTOK_SESSION_COUNT=1

# Enable Vietnam-specific optimizations (true/false)
TIKTOK_VIETNAM_REGION=true
