# Dropship Product Finder Service Configuration

# Mock Configuration
USE_MOCK_FINDERS=true  # Set to "false" to use real eBay and Amazon APIs

# eBay API Configuration (only used when USE_MOCK_FINDERS=false)
# Set EBAY_ENVIRONMENT to 'sandbox' or 'production'

# Sandbox Credentials
EBAY_SANDBOX_CLIENT_ID=your_sandbox_app_id
EBAY_SANDBOX_CLIENT_SECRET=your_sandbox_app_secret

# Production Credentials
EBAY_PRODUCTION_CLIENT_ID=your_production_app_id
EBAY_PRODUCTION_CLIENT_SECRET=your_production_app_secret

EBAY_MARKETPLACES=EBAY_US,EBAY_DE,EBAY_AU

EBAY_ENVIRONMENT=sandbox  # or "production"
EBAY_SCOPES="https://api.ebay.com/oauth/api_scope"