{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FeaturesReady",
  "type": "object",
  "required": ["entity_type", "id", "emb_rgb", "emb_gray"],
  "properties": {
    "entity_type": {
      "type": "string",
      "enum": ["product_image", "video_frame"],
      "description": "Type of entity the features belong to"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the entity (image_id or frame_id)"
    },
    "emb_rgb": {
      "type": "array",
      "items": {"type": "number"},
      "description": "RGB embedding vector"
    },
    "emb_gray": {
      "type": "array",
      "items": {"type": "number"},
      "description": "Grayscale embedding vector"
    },
    "kp_blob_path": {
      "type": "string",
      "description": "Path to keypoint descriptors blob file"
    }
  }
}