{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VideosSearchRequest",
  "type": "object",
  
  "additionalProperties": true,
  "required": ["job_id", "industry", "queries", "platforms", "recency_days"],
  "properties": {
    "job_id": {
      "type": "string",
      "description": "Unique identifier for the job"
    },
    "industry": {
      "type": "string",
      "description": "Industry keyword for video search"
    },
    "queries": {
      "type": "object",
      "description": "Search queries by language",
      "required": ["vi", "zh"],
      "properties": {
        "vi": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Vietnamese search queries"
        },
        "zh": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Chinese search queries"
        }
      },
      "additionalProperties": true
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["youtube", "bilibili", "douyin", "tiktok"]
      },
      "description": "Video platforms to search"
    },
    "recency_days": {
      "type": "integer",
      "minimum": 1,
      "description": "How many days back to search for videos"
    }
  }
}