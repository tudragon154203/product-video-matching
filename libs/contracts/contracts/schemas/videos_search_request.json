{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VideosSearchRequest",
  "type": "object",
  "required": ["job_id", "industry", "queries", "platforms", "recency_days"],
  "properties": {
    "job_id": {
      "type": "string",
      "description": "Unique identifier for the job"
    },
    "industry": {
      "type": "string",
      "description": "Industry keyword for video search"
    },
    "queries": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of search queries"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["youtube", "bilibili"]
      },
      "description": "Video platforms to search"
    },
    "recency_days": {
      "type": "integer",
      "minimum": 1,
      "description": "How many days back to search for videos"
    }
  }
}