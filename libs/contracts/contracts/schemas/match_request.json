{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MatchRequest",
  "type": "object",
  "additionalProperties": true,
  "required": ["job_id", "event_id"],
  "properties": {
    "job_id": {
      "type": "string",
      "description": "Unique identifier for the job"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the event (UUIDv4)"
    }
  }
}
