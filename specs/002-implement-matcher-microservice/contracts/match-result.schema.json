{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Match Result Schema",
  "description": "Schema for matcher microservice output - match results with scores and bounding boxes",
  "type": "object",
  "required": [
    "event_id",
    "status",
    "matches",
    "completion_timestamp"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique identifier for this event message",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["completed", "failed"],
      "description": "Overall processing status"
    },
    "error": {
      "type": "object",
      "description": "Error details if status is failed",
      "properties": {
        "error_code": {
          "type": "string",
          "description": "Machine-readable error code"
        },
        "error_message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "error_details": {
          "type": "object",
          "description": "Additional error context"
        }
      }
    },
    "matches": {
      "type": "array",
      "description": "Array of match results",
      "items": {
        "type": "object",
        "required": [
          "product_id",
          "frame_id",
          "match_score",
          "bounding_box",
          "confidence_level",
          "match_timestamp"
        ],
        "properties": {
          "product_id": {
            "type": "string",
            "description": "Reference to the matched product",
            "minLength": 1
          },
          "frame_id": {
            "type": "string",
            "description": "Reference to the matched video frame",
            "minLength": 1
          },
          "match_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Overall match confidence (0.0 to 1.0)"
          },
          "bounding_box": {
            "type": "object",
            "description": "Coordinates of matched region",
            "required": ["x", "y", "width", "height"],
            "properties": {
              "x": {
                "type": "number",
                "minimum": 0,
                "description": "Top-left x coordinate"
              },
              "y": {
                "type": "number",
                "minimum": 0,
                "description": "Top-left y coordinate"
              },
              "width": {
                "type": "number",
                "minimum": 0,
                "description": "Bounding box width"
              },
              "height": {
                "type": "number",
                "minimum": 0,
                "description": "Bounding box height"
              }
            }
          },
          "confidence_level": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence in match (0.0 to 1.0)"
          },
          "match_timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When matching occurred (UTC)"
          },
          "algorithm_used": {
            "type": "string",
            "enum": ["clip", "cv_features", "hybrid"],
            "description": "Which algorithm contributed to this match"
          },
          "metadata": {
            "type": "object",
            "description": "Additional matching metadata"
          }
        }
      }
    },
    "completion_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When processing completed"
    },
    "processing_time_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Total processing time in milliseconds"
    },
    "correlation_id": {
      "type": "string",
      "description": "Correlation ID for cross-service tracing",
      "minLength": 1
    }
  }
}